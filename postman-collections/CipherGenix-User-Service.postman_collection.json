            ],
            "url": {
              "raw": "{{base_url}}/user/profile",
              "host": ["{{base_url}}"],
              "path": ["user", "profile"]
            }
          },
          "response": []
        },
        {
          "name": "Get User by UUID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user/{{user_uuid}}",
              "host": ["{{base_url}}"],
              "path": ["user", "{{user_uuid}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get User by Email",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user/user/john.doe@ciphergenix.com",
              "host": ["{{base_url}}"],
              "path": ["user", "user", "john.doe@ciphergenix.com"]
            }
          },
          "response": []
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@ciphergenix.com\",\n  \"phone\": \"+1-555-0123\",\n  \"bio\": \"Senior Security Engineer at CipherGenix\",\n  \"address\": \"123 Security Blvd, San Francisco, CA 94105\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/user/update",
              "host": ["{{base_url}}"],
              "path": ["user", "update"]
            }
          },
          "response": []
        },
        {
          "name": "Upload Profile Photo",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/profile/image.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/user/photo",
              "host": ["{{base_url}}"],
              "path": ["user", "photo"]
            }
          },
          "response": []
        },
        {
          "name": "Get Profile Photo",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/user/image/profile_image.jpg",
              "host": ["{{base_url}}"],
              "path": ["user", "image", "profile_image.jpg"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Password Management",
      "item": [
        {
          "name": "Update Password (Logged In)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"OldPassword123!\",\n  \"newPassword\": \"NewPassword123!\",\n  \"confirmPassword\": \"NewPassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/user/updatepassword",
              "host": ["{{base_url}}"],
              "path": ["user", "updatepassword"]
            }
          },
          "response": []
