{
  "info": {
    "name": "CipherGenix User Service",
    "description": "User management, authentication, and profile operations",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8086",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_uuid",
      "value": "",
      "type": "string"
    },
    {
      "key": "verification_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "password_reset_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication & Registration",
      "item": [
        {
          "name": "Register New User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@ciphergenix.com\",\n  \"username\": \"johndoe\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/user/register",
              "host": ["{{base_url}}"],
              "path": ["user", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Verify Account",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/user/verify/account?token={{verification_token}}",
              "host": ["{{base_url}}"],
              "path": ["user", "verify", "account"],
              "query": [
                {
                  "key": "token",
                  "value": "{{verification_token}}"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Multi-Factor Authentication (MFA)",
      "item": [
        {
          "name": "Enable MFA",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user/mfa/enable",
              "host": ["{{base_url}}"],
              "path": ["user", "mfa", "enable"]
            }
          },
          "response": []
        },
        {
          "name": "Disable MFA",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/user/mfa/disable",
              "host": ["{{base_url}}"],
              "path": ["user", "mfa", "disable"]
            }
          },
          "response": []
        }
      ]
    },
    {
