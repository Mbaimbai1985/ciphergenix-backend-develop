{
  "info": {
    "name": "CipherGenix API Gateway",
    "description": "API Gateway service for routing requests to microservices",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "gateway_base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "Gateway Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_base_url}}/actuator/health",
              "host": ["{{gateway_base_url}}"],
              "path": ["actuator", "health"]
            }
          },
          "response": []
        },
        {
          "name": "Gateway Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_base_url}}/actuator/info",
              "host": ["{{gateway_base_url}}"],
              "path": ["actuator", "info"]
            }
          },
          "response": []
        },
        {
          "name": "Service Routes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_base_url}}/actuator/gateway/routes",
              "host": ["{{gateway_base_url}}"],
              "path": ["actuator", "gateway", "routes"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Vulnerability Detection Service",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_base_url}}/api/v1/vulnerability-detection/health",
              "host": ["{{gateway_base_url}}"],
              "path": ["api", "v1", "vulnerability-detection", "health"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Model Integrity Service",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_base_url}}/api/v1/model-integrity/health",
              "host": ["{{gateway_base_url}}"],
              "path": ["api", "v1", "model-integrity", "health"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payment Service",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_base_url}}/api/v1/payments/health",
              "host": ["{{gateway_base_url}}"],
              "path": ["api", "v1", "payments", "health"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Security Engine Service",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_base_url}}/api/v1/security-engine/health",
              "host": ["{{gateway_base_url}}"],
              "path": ["api", "v1", "security-engine", "health"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  }
}